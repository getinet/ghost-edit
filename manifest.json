{
  "manifest_version": 3,
  "name": "Edit post and pages in ghost",
  "version": "1.0",
  "description": "Edit post and pages in ghost.",
  "permissions": ["tabs", "storage", "contextMenus", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Edit Post"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": ["<all_urls>"]
}
